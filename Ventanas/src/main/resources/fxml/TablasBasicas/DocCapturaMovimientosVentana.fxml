                  <VBox>
                     <children>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                           <children>
                              <Button mnemonicParsing="false" onAction="#refrescarLista" text="Refrescar" />
                           </children>
                        </HBox>
                        <TableView fx:id="tablaDocumento" />
                     </children>
                  </VBox>
               </content>
